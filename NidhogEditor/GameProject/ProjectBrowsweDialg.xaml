<Window x:Class="NidhogEditor.GameProject.ProjectBrowsweDialg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NidhogEditor.GameProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Project Browswe" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" >
            <ToggleButton Content="打开项目" x:Name="OpenProjectButton" FontSize="32"
                          Click="OnToggleButton_Click" IsChecked="True"/>
            <ToggleButton Content="新建项目" x:Name="CreatProjectButton" Margin="30,0,0,0" FontSize="32"
                          Click="OnToggleButton_Click" IsChecked="False"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" x:Name="BrowswerContent" >
            <local:OpenProjectView x:Name="openProjectView"/>
            <local:NewProjectView x:Name="newProjectView"/>
        </StackPanel>

    </Grid>
</Window>
